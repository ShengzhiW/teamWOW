<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg"
    android:elevation="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.506"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/title_shop"
        android:textColor="@color/Figma"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/hatOpen"
        style="@style/FirebaseUI.Button"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bodyOpen"
        android:layout_marginStart="25dp"
        android:width="150dp"
        android:height="150dp"
        android:background="@drawable/button_rounded"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_avatatop"
        android:padding="30dp"
        android:text="Hats"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bodyOpen"
        style="@style/FirebaseUI.Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_margin="10dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="25dp"
        android:width="150dp"
        android:height="150dp"
        android:background="@drawable/button_rounded"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_avatarbody"
        android:padding="30dp"
        android:text="Body"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="199dp"
        android:layout_height="187dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:adjustViewBounds="false" />

    <ImageView
        android:id="@+id/imgViewHat"
        android:layout_width="199dp"
        android:layout_height="187dp"
        android:layout_alignStart="@+id/imgView"
        android:layout_alignTop="@+id/imgView" />


</RelativeLayout>
