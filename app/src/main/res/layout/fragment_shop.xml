<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg"
    android:elevation="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.506"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/title_shop"
        android:textColor="@color/Figma"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/currencyShop"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"
        android:background="@drawable/currency_counter"
        android:text="abcd"
        android:textColor="@color/goldvalue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stateListAnimator="@null"
        android:drawableLeft="@drawable/garybucks"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/hatOpen"
            style="@style/FirebaseUI.Button"
            android:width="140dp"
            android:height="140dp"
            android:background="@drawable/button_rounded"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_avatartop"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="@string/shop_hat"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:stateListAnimator="@null"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/bodyOpen"
            style="@style/FirebaseUI.Button"
            android:width="140dp"
            android:height="140dp"
            android:background="@drawable/button_rounded"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_avatarbody"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="@string/shop_body"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:stateListAnimator="@null"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/avatar_image_rounded"/>

    <ImageView
        android:id="@+id/imgViewHat"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignStart="@+id/imgView"
        android:layout_alignTop="@+id/imgView" />

</RelativeLayout>

