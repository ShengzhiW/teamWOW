<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="463dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/privacy_title"
            android:textColor="@color/Figma"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/returnBtn"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/round_button"
            android:text="X"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/priLead"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:text="@string/privacy_leader_board"
            android:textColor="@color/Figma" />

        <Switch
            android:id="@+id/eSwitch"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/priLead"
            android:layout_marginTop="138dp"
            android:checked="false"
            android:splitTrack="false"
            android:text="@string/privacy_email"
            android:textColor="@color/Figma" />

    </RelativeLayout>
    <!-- tools:background="@android:color/holo_red_light">
    android:background="@drawable/layout_bg" -->


</android.support.constraint.ConstraintLayout>