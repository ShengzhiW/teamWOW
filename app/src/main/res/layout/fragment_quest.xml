<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.506"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:elevation="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/title_quest"
        android:textColor="@color/Figma"
        android:textSize="30sp"
        android:textStyle="bold" />


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        cardview:cardElevation="10dp"
        android:layout_marginTop="60dp"
        android:hardwareAccelerated="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="00dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/challenge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/daily_challenge"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_directions_walk_black_24dp"
                android:layout_column="1"/>


            <TextView
                android:id="@+id/quest_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/Figma"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Walk 1000 Steps"/>

            <TextView
                android:id="@+id/stepCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="500"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="10sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Steps Walked So Far"/>

            <TextView
                android:id="@+id/reward_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="@string/reward"
                android:textColor="@color/goldvalue"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/reward_text"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:background="@drawable/currency_counter"
                android:text="300"
                android:textColor="@color/goldvalue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                android:stateListAnimator="@null"
                android:drawableLeft="@drawable/garybucks"/>

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:text="@string/instructions"
                android:gravity="left"
                android:textSize="10sp"
                android:background="@drawable/avatar_image_rounded2"
                android:textColor="@color/lightGrey"
                android:padding="12dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>