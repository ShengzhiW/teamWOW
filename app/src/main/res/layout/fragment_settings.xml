<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.506"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:elevation="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/title_settings"
        android:textColor="@color/Figma"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_round"
        android:text="@string/view_profile"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/nickname_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:background="@drawable/button_round"
        android:text="@string/nickname_text"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/privacy_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/button_round"
        android:text="@string/edit_privacy"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/about_walk"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:background="@drawable/button_round"
        android:text="@string/about_one_walk"
        style="?android:attr/borderlessButtonStyle"/>


    <Button
        android:id="@+id/logout_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:background="@drawable/button_round"
        android:text="@string/logout_text"
        style="?android:attr/borderlessButtonStyle"/>





    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#FFFFFF"
        android:text="@string/delete_account_text"
        android:textColor="#f00"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>